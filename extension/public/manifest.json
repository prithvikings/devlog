{
  "manifest_version": 3,
  "name": "DevLog AI",
  "version": "1.0.0",
  "description": "Turn code into content. Zero friction.",
  "permissions": ["storage", "cookies"],
  "host_permissions": ["http://localhost:8000/*", "http://localhost:8002/*"],
  "action": {
    "default_popup": "index.html",
    "default_title": "DevLog AI",
    "default_icon": {
      "16": "terminal.png",
      "48": "terminal.png",
      "128": "terminal.png"
    }
  },
  "icons": {
    "16": "terminal.png",
    "48": "terminal.png",
    "128": "terminal.png"
  }
}
